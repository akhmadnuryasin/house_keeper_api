        "summary": "Employee Attendance Records",
        "description": "Get the attendance records for the logged-in employee (karyawan only).",
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation. Returns the attendance records for the employee.",
            "schema": {
              "type": "array",
