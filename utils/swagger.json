  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "nomorPegawai": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "Kamar": {
